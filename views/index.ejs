<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>
    <header>
        <%- include('./templates/navbar.ejs'); %>
            <section id="header" class="d-flex align-items-center mx-auto">
                <div class="constainer lg-w-75 sm-w-100 mx-5 mx-lg-auto ">

                    <form class="main-form w-100" action="book_flights" method="POST">
                        <h3 class="litle_card">Travel Organization</h3>
                        <div class="row">
                            <div class="col-md-9">
                                <div class="row">
                                    <div class=" col-sm-6 col-12">
                                        <label>City Departure</label>
                                        <select class="form-control" name="departStation">
                                            <option hidden selected>City</option>
                                            <option>Safi</option>
                                            <option>Casa</option>
                                            <option>Rabat</option>
                                            <option>Fes</option>
                                        </select>
                                    </div>
                                    <div class=" col-sm-6 col-12">
                                        <label>arrival city</label>
                                        <select class="form-control" name="arrivalStation">
                                            <option hidden selected>City</option>
                                            <option>Safi</option>
                                            <option>Casa</option>
                                            <option>Rabat</option>
                                            <option>Fes</option>
                                        </select>
                                    </div>

                                    <div class=" col-sm-6 col-12">
                                        <label>departure date</label>
                                        <input class="form-control" type="date" type="text" name="departDate">
                                    </div>
                                    <div class=" col-sm-6 col-12">
                                        <label>Arrival date</label>
                                        <input class="form-control" type="date" name="Any">
                                    </div>

                                </div>
                            </div>
                            <div
                                class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12 d-flex align-items-center justify-content-center">
                                <input type="submit" value="Search" class="btn btn-primary">
                                <!-- <a href="#" class="btn btn-primary">Search</a> -->
                            </div>
                        </div>
                    </form>

                </div>

                </div>

            </section>
    </header>

    <footer class="text-center text-lg-start bg-light text-muted">
        <%- include('./templates/footer.ejs'); %>
    </footer>
</body>


</html>